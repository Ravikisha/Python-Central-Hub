<style>
  #optionButtons {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin: 1rem 0;
  }
  #print,
  #share {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.2s ease-in-out;
  }
  #printIcon,
  #shareIcon {
    transition: all 0.2s ease-in-out;
  }
  #share:hover > #shareIcon {
    transform: rotate(180deg);
  }
  #print:hover > #printIcon {
    transform: rotate(180deg);
  }
</style>

<script>
  const share = document.getElementById("share");
  const shareText = document.getElementById("shareText");
  const shareIcon = document.getElementById("shareIcon");
  if (share && shareText && shareIcon) {
    share.addEventListener("click", () => {
      if (navigator.share) {
        navigator
          .share({
            title: document.title,
            url: window.location.href,
          })
          .then(() => {
            shareText.innerText = "Shared!";
            shareIcon.style.fill = "#90EE90";
          })
          .catch(() => {
            shareText.innerText = "Error!";
            shareIcon.style.fill = "#FF7F7F";
          });
      } else {
        shareText.innerText = "Not supported!";
        shareIcon.style.fill = "#FF7F7F";
      }
    });
  }

  const print = document.getElementById("print");
  const printText = document.getElementById("printText");
  const printIcon = document.getElementById("printIcon");
  const heading = document.getElementById("_top");

  const mainPage = document.querySelector(".main-pane");

  function printPage() {
    if (heading && mainPage && print && printText && printIcon) {
      const mainContent = document.body.innerHTML;
      const printContent = mainPage as HTMLElement;
      document.body.innerHTML = printContent.innerHTML;
      window.print();
      document.body.innerHTML = mainContent;
      window.location.reload();
    }
  }
  if (print) {
    print.addEventListener("click", printPage);
  }
</script>
